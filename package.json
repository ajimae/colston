{
  "name": "colstonjs",
  "version": "0.1.0",
  "author": "Chukwuemeka Ajima <meeky.ae@gmail.com>",
  "repository": "https://github.com/ajimae/colston.git",
  "main": "dist/index.js",
  "dependencies": {
    "bun-types": "^0.1.4"
  },
  "description": "fast, lightweight and zero dependency framework for bunjs",
  "files": [
    "dist/*",
    "package.json",
    "README.md",
    "bun.lockb",
    "tsconfig.json",
    "LICENSE.md"
  ],
  "keywords": [
    "bun",
    "bunjs",
    "colston",
    "colstonjs",
    "api",
    "web",
    "http",
    "server",
    "framework"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "postbuild": "bun run clean",
    "clean": "rsync -r -q -i --remove-source-files --include './*.d.ts' --exclude '*.js' --prune-empty-dirs --delete-after dist/ dist/declarations/"
  }
}
